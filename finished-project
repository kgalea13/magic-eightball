if(eightBall === 0){
  console.log('It is certain');
} else if(eightBall === 1){
  console.log('I see this in your future')
} else if(eightBall === 2){
  console.log('Count on it!')
} else if(eightBall === 3){
  console.log('My sources say "Yes"')
} else if(eightBall === 4){
  console.log('Outlook is good')
} else if(eightBall === 5){
  console.log('Signs point to "yes"')
} else if(eightBall === 6){
  console.log('Reply is clear as a bell. "Yes"')
} else if(eightBall === 7){
  console.log('Prediction looks good')
} 



console.log(`The Magic Eight Ball Says: ${eightBall}. You are on your way ${userName}!`)

  
